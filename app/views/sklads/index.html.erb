<h1>Склад</h1>

<table class="table">
  <thead>
    <tr>
      <th>Название</th>
      <th>Количество</th>
      <th colspan="3">Дата измениния</th>
    </tr>
  </thead>

  <tbody>
    <% @sklads.each do |sklad| %>
      <tr>
        <td><%= Prodact.find(sklad.prodact_id).name %></td>
        <td><%= sklad.count %></td>
        <td><%= sklad.updated_at.strftime('%d %b %Y %H:%M:%S') %></td>
        <td><%= link_to 'Edit', edit_sklad_path(sklad) %></td>
        <td><%= link_to 'Destroy', sklad, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

