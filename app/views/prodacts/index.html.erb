<h1>Listing Prodacts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Название</th>
      <th>Модель</th>
      <th>Цвет</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @prodacts.each do |prodact| %>
      <tr>
        <td><%= prodact.name %></td>
        <td><%= Model.find(prodact.model_id).name %></td>
        <td><%= Color.find(prodact.color_id).name %></td>
        <td><%= link_to 'Edit', edit_prodact_path(prodact) %></td>
        <td><%= link_to 'Destroy', prodact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Prodact', new_prodact_path %>
