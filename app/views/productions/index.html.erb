<h1>Производство</h1>

<table class="table">
  <thead>
    <tr>
      <th>Название</th>
      <th>Количество</th>
      <th>Статус</th>
      <th>Мастер</th>
      <th colspan="3">Дата измениния</th>
    </tr>
  </thead>

  <tbody>
    <% @productions.each do |production| %>
      <tr>
        <td><%= Prodact.find(production.prodact_id).name %></td>
        <td><%= production.count %></td>
        <td><%= ['Нарезано','Сшиваеться','Готово'][production.status - 1] %></td>
        <td><%= production.master %></td>
        <td><%= production.updated_at.strftime('%d %b %Y %H:%M:%S') %></td>
        <td><%= link_to 'Edit', edit_production_path(production) %></td>
        <td><%= link_to 'Destroy', production, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

