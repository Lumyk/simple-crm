<h1>На продажу</h1>

<%= simple_form_for(@selling) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :prodact_id, collection: @products %>
      <%= f.input :count %>
      <%= f.input :store_id, collection: @stores %>
      <%= f.input :store_price %>
      <%= f.input :my_money %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>


<%= link_to 'Back', sellings_path %>
