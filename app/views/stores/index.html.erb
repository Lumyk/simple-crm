<h1>Магазины</h1>

<table class="table">
  <thead>
  <tr>
    <th colspan="3">Название</th>
  </tr>
  </thead>
  <tbody>
  <% @stores.each do |store| %>
    <tr>
      <td><%= link_to(store.name, store_path(store)) %></td>
      <td><%= link_to('Изменить', edit_store_path(store)) %></td>
      <td><%= link_to('Удалить', store_path(store), method: :delete, data:{ confirm: 'Вы действительно хотите удалить этот магазин?' } ) %></td>
    </tr>
  <% end %>
  </tbody>
</table>